import { BrightnessController } from "BrightnessController.slint";
import { BatteryController } from "Battery.slint";
import { HitoWindow } from "HitoWindow.slint";
import { LockScreen } from "LockScreen.slint";
import { HomeScreen } from "HomeScreen.slint";
import { EnterPinScreen } from "EnterPinScreen.slint";
import { TestScreen } from "TestScreen.slint";
import { TestScreen2 } from "TestScreen2.slint";
import { Router, ScreenEnum as Screen } from "Router.slint";
import { ReceiveScreen } from "ReceiveScreen.slint";
import { SendScreen } from "SendScreen.slint";
import { SettingsScreen } from "SettingsScreen.slint";
import { EnterPinController } from "EnterPinController.slint";
import { PairWithTheAppScreen } from "PairWithTheAppScreen.slint";

export { BrightnessController, BatteryController, Router, EnterPinController } // Export controllers and router for global access

export component MainWindow inherits HitoWindow {
    // Main navigation container
    if Router.current == Screen.Lock: LockScreen {}
    if Router.current == Screen.TestScreen: TestScreen {}
    if Router.current == Screen.EnterPin: EnterPinScreen {}
    if Router.current == Screen.TestScreen2: TestScreen2 {}
    if Router.current == Screen.Home: HomeScreen {}
    if Router.current == Screen.Send: SendScreen {}
    if Router.current == Screen.Receive: ReceiveScreen {}
    if Router.current == Screen.Settings: SettingsScreen {}
    if Router.current == Screen.PairWithTheApp: PairWithTheAppScreen {}
}